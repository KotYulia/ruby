<%= form_for task do |f| %>
  <div>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :text %><br />
    <%= f.text_area(:text, size: '50x10') %>
  </div>

  <%= f.hidden_field :user_id, :value => params["id"] %>

  <div class="actions"><%= f.submit "Create task" %></div>
<% end %>
<div class="wrapper">
  <p class="article-title">
    <%= @article.title %>
  </p>

  <p class="article-content">
    <%= @article.text %>
  </p>

  <h2>Comments:</h2>
  <div class="flex-block">
    <%= render @article.comments %>
  </div>

  <h2>Add a comment:</h2>
  <%= render 'comments/form' %>

  <%= link_to 'Edit', edit_article_path(@article) %>
  <%= link_to 'Back', articles_path %>
</div>